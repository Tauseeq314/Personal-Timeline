<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartTimeline" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Theme.SmartTimeline" parent="Base.Theme.SmartTimeline" />

    <!-- Button Styles -->
    <style name="Widget.SmartTimeline.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.SmartTimeline.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.SmartTimeline.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.SmartTimeline.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.SmartTimeline.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.SmartTimeline.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.SmartTimeline.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.SmartTimeline.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <!-- Splash Screen Theme (no action bar) -->
    <style name="Theme.SmartTimeline.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
    </style>
</resources>