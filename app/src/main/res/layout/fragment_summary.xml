<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/primary_light"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– AI Summary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get intelligent insights about your timeline using AI"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Period Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Time Period"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWeekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… Weekly"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“† Monthly"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_selector" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipYearly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Yearly"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_selector" />
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonGenerateSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Generate Summary"
                    android:textSize="15sp"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Progress -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="@color/primary" />

                <TextView
                    android:id="@+id/textViewLoadingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Analyzing your timeline..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State -->
        <include
            android:id="@+id/emptyStateView"
            layout="@layout/empty_state_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Summary Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSummaryResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Gradient Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_summary_header"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/textViewPeriod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Weekly Summary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            tools:text="Weekly Summary" />

                        <ImageView
                            android:id="@+id/iconShare"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="@color/white"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:contentDescription="Share summary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewGeneratedTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generated: Jan 22, 2026"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        tools:text="Generated: Jan 22, 2026" />
                </LinearLayout>

                <!-- Summary Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Main Summary Text -->
                    <TextView
                        android:id="@+id/textViewSummaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your AI-generated summary will appear here..."
                        android:textSize="15sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="20dp"
                        tools:text="This week showed a balanced emotional journey with moments of productivity and reflection..." />

                    <!-- Stats Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Posts Count -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/stat_card_background"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:id="@+id/textViewPostCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                tools:text="12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posts"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                        <!-- Dominant Mood -->
                        <LinearLayout
                            android:id="@+id/layoutDominantMood"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/stat_card_background"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textViewDominantMood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜Š Happy"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/chart_color_2"
                                tools:text="ðŸ˜Š Happy"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Top Mood"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Key Themes -->
                    <LinearLayout
                        android:id="@+id/layoutKeyThemes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/stat_card_background"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ·ï¸ Key Themes"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/textViewKeyThemes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="work, family, health"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            tools:text="work, family, health, travel, hobbies" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>